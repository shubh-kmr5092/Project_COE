<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/workingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="50sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:paddingRight="30dp"


            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="clearOnClick"
                android:text="C"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="bracketOnClick"
                android:text="()"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="expoOnClick"
                android:text="^"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="divOnClick"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="oneOnClick"
                android:text="1"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="twoOnClick"
                android:text="2"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="threeOnClick"
                android:text="3"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="addOnClick"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="fourOnClick"
                android:text="4"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="fiveOnClick"
                android:text="5"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="sixOnClick"
                android:text="6"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="subOnClick"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1">

            <Button
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="sevenOnClick"
                android:text="7"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="eightOnClick"
                android:text="8"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="nineOnClick"
                android:text="9"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <Button
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:onClick="mulOnClick"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="decimalOnClick"
                android:text="."/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="zeroOnClick"
                android:text="0"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="40sp"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:onClick="resultsOnClick"
                android:text="="/>



        </LinearLayout>




    </LinearLayout>
</LinearLayout>
